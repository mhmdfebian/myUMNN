<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark"
    android:orientation="vertical"
    tools:context=".Financial">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnClose"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/close"
            android:backgroundTint="@color/TeritaryLight"
            android:padding="12dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp">

        <TextView
            android:id="@+id/Financial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="6dp"
            android:fontFamily="@font/gilroy_extrabold"
            android:text="Financial"
            android:textColor="@color/Primary"
            android:textSize="30sp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="6dp"
            android:src="@drawable/money"
            android:tint="@color/Primary"
            android:layout_toEndOf="@id/Financial"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/card"
        android:backgroundTint="@color/bg_light"
        android:orientation="vertical">

        <TextView
            android:id="@+id/semester"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginStart="16dp"
            android:text="1st Semester 2019/2020"
            android:fontFamily="@font/gilroy_extrabold"
            android:textSize="22dp"
            android:textColor="@color/Teritary"/>

        <TextView
            android:id="@+id/jenis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="38dp"
            android:text="Jenis Biaya"
            android:layout_below="@id/semester"
            android:fontFamily="@font/gilroy_medium"
            android:textSize="12dp"
            android:textColor="@color/Teritary"/>

        <TextView
            android:id="@+id/sks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="38dp"
            android:layout_marginEnd="12dp"
            android:text="SKS"
            android:layout_below="@id/semester"
            android:layout_toEndOf="@id/jenis"
            android:fontFamily="@font/gilroy_medium"
            android:textSize="12dp"
            android:textColor="@color/Teritary"/>

        <TextView
            android:id="@+id/biaya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="22dp"
            android:text="Biaya/SKS"
            android:layout_below="@id/semester"
            android:layout_toEndOf="@id/sks"
            android:fontFamily="@font/gilroy_medium"
            android:textSize="12dp"
            android:textColor="@color/Teritary"/>

        <TextView
            android:id="@+id/jumlah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:text="Jumlah"
            android:layout_below="@id/semester"
            android:layout_toEndOf="@id/biaya"
            android:fontFamily="@font/gilroy_medium"
            android:textSize="12dp"
            android:textColor="@color/Teritary"/>

        <TextView
            android:id="@+id/tvJenis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            android:text="Biaya Tetap Semester"
            android:layout_below="@id/jenis"
            android:fontFamily="@font/gilroy_medium"
            android:textSize="12dp"
            android:textColor="@color/TeritaryLight"/>

        <TextView
            android:id="@+id/tvSKS"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            android:text=""
            android:textAlignment="center"
            android:layout_below="@id/jenis"
            android:layout_toEndOf="@id/tvJenis"
            android:fontFamily="@font/gilroy_medium"
            android:textSize="12dp"
            android:textColor="@color/TeritaryLight"/>

        <TextView
            android:id="@+id/tvBiaya"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            android:text=""
            android:textAlignment="center"
            android:layout_below="@id/jenis"
            android:layout_toEndOf="@id/tvSKS"
            android:fontFamily="@font/gilroy_medium"
            android:textSize="12dp"
            android:textColor="@color/TeritaryLight"/>

        <TextView
            android:id="@+id/tvJumlah"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="11dp"
            android:layout_marginEnd="16dp"
            android:text="Rp 5.550.000,-"
            android:textAlignment="center"
            android:layout_below="@id/jenis"
            android:layout_toEndOf="@id/tvBiaya"
            android:fontFamily="@font/gilroy_medium"
            android:textSize="12dp"
            android:textColor="@color/TeritaryLight"/>

<!--            <androidx.recyclerview.widget.RecyclerView-->
<!--                android:id="@+id/listviewFinancial"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_below="@id/jenis"-->
<!--                android:layout_marginTop="4dp"-->
<!--                android:layout_marginBottom="32dp"-->
<!--                android:layout_marginStart="16dp"-->
<!--                android:layout_marginEnd="16dp"/>-->

    </RelativeLayout>

</LinearLayout>