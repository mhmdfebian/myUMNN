<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/bg_light"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="145dp">

            <TextView
                android:id="@+id/nameEvent"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/gilroy_extrabold"
                android:text="Event"
                android:textColor="@color/Teritary"
                android:textSize="22sp" />

            <Button
                android:id="@+id/btnAdd"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="2.5dp"
                android:layout_toEndOf="@id/nameEvent"
                android:background="@drawable/plus"
                android:backgroundTint="@color/TeritaryLight"
                android:fontFamily="@font/gilroy_medium"
                android:gravity="end" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/nameEvent"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/gilroy_medium"
                android:text="Event description"
                android:textColor="@color/TeritaryLight"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iconTime"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_below="@id/desc"
                android:layout_marginStart="18dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/calendar2"
                android:tint="@color/Secondary" />

            <TextView
                android:id="@+id/date"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/desc"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:layout_toEndOf="@id/iconTime"
                android:fontFamily="@font/gilroy_medium"
                android:gravity="start"
                android:text="Date"
                android:textColor="@color/Secondary"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iconLocation"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_below="@id/desc"
                android:layout_marginStart="80dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@id/date"
                android:src="@drawable/location"
                android:tint="@color/Secondary" />

            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/desc"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:layout_toEndOf="@id/iconLocation"
                android:fontFamily="@font/gilroy_medium"
                android:gravity="start"
                android:text="Location"
                android:textColor="@color/Secondary"
                android:textSize="12sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>