<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/bg_light"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/nameSubject"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/gilroy_extrabold"
                android:text="Subject"
                android:textColor="@color/Teritary"
                android:textSize="22sp" />


            <ImageView
                android:id="@+id/iconDay"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_below="@id/nameSubject"
                android:layout_marginStart="18dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/calendar2"
                android:tint="@color/Secondary" />

            <TextView
                android:id="@+id/day"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameSubject"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:layout_toEndOf="@id/iconDay"
                android:fontFamily="@font/gilroy_medium"
                android:gravity="start"
                android:text="Monday"
                android:textColor="@color/Secondary"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iconTime"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_below="@id/iconDay"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/time"
                android:tint="@color/Secondary" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iconDay"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="16dp"
                android:layout_toEndOf="@id/iconTime"
                android:fontFamily="@font/gilroy_medium"
                android:gravity="start"
                android:text="15:00"
                android:textColor="@color/Secondary"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/strip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iconDay"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="16dp"
                android:layout_toEndOf="@id/time"
                android:fontFamily="@font/gilroy_medium"
                android:gravity="start"
                android:text="-"
                android:textColor="@color/Secondary"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/timeend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iconDay"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="16dp"
                android:layout_toEndOf="@id/strip"
                android:fontFamily="@font/gilroy_medium"
                android:gravity="start"
                android:text="15:00"
                android:textColor="@color/Secondary"
                android:textSize="12sp" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>