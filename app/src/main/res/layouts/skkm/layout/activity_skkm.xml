<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark"
    android:orientation="vertical"
    tools:context=".Skkm.Skkm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnClose"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/close"
            android:backgroundTint="@color/TeritaryLight"
            android:padding="12dp" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/SKKM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/gilroy_extrabold"
            android:text="SKKM Points"
            android:textColor="@color/Primary"
            android:textSize="30sp" />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="6dp"
            android:src="@drawable/favorite"
            android:tint="@color/Primary"
            android:layout_toEndOf="@id/SKKM"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp">

        <ProgressBar
            android:id="@+id/pbSKKM"
            style="?android:progressBarStyleHorizontal"
            android:layout_width="336dp"
            android:layout_height="12dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="4dp"
            android:indeterminate="false"
            android:max="20"
            android:progress="0"
            android:progressDrawable="@drawable/progressbar" />

        <TextView
            android:id="@+id/tvPersen"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/gilroy_medium"
            android:text="0%"
            android:textAlignment="textEnd"
            android:textColor="@color/Secondary"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:rowCount="2">

            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="130dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="9.5dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/card"
                android:backgroundTint="@color/bg_light"
                android:gravity="center"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvIP"
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_medium"
                    android:layout_marginStart="15dp"
                    android:text="0"
                    android:textAlignment="textEnd"
                    android:textColor="@color/Primary"
                    android:textSize="29sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/tvIP"
                    android:fontFamily="@font/gilroy_medium"
                    android:layout_marginEnd="28dp"
                    android:text=" / 6"
                    android:textColor="@color/Primary"
                    android:textSize="29sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvIP"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/gilroy_medium"
                    android:text="Ilmiah dan Penalaran"
                    android:textAlignment="textEnd"
                    android:textColor="@color/Primary"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="130dp"
                android:layout_marginStart="9.5dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/card"
                android:backgroundTint="@color/bg_light"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvBM"
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_medium"
                    android:layout_marginStart="15dp"
                    android:text="0"
                    android:textAlignment="textEnd"
                    android:textColor="@color/Primary"
                    android:textSize="29sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/tvBM"
                    android:fontFamily="@font/gilroy_medium"
                    android:layout_marginEnd="28dp"
                    android:text=" / 4"
                    android:textColor="@color/Primary"
                    android:textSize="29sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvBM"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/gilroy_medium"
                    android:text="Bakat dan Minat"
                    android:textAlignment="center"
                    android:textColor="@color/Primary"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="130dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="9.5dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/card"
                android:backgroundTint="@color/bg_light"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvOPK"
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_medium"
                    android:text="0"
                    android:layout_marginStart="15dp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/Primary"
                    android:textSize="29sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/tvOPK"
                    android:fontFamily="@font/gilroy_medium"
                    android:layout_marginEnd="28dp"
                    android:text=" / 6"
                    android:textColor="@color/Primary"
                    android:textSize="29sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvOPK"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/gilroy_medium"
                    android:text="Organisasi dan Pengembangan Kepribadian"
                    android:textAlignment="center"
                    android:textColor="@color/Primary"
                    android:textSize="11.23sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="130dp"
                android:layout_marginStart="9.5dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/card"
                android:backgroundTint="@color/bg_light"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvPM"
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_medium"
                    android:layout_marginStart="15dp"
                    android:text="0"
                    android:textAlignment="textEnd"
                    android:textColor="@color/Primary"
                    android:textSize="29sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/tvPM"
                    android:fontFamily="@font/gilroy_medium"
                    android:layout_marginEnd="28dp"
                    android:text=" / 4"
                    android:textColor="@color/Primary"
                    android:textSize="29sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvPM"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/gilroy_medium"
                    android:text="Pengabdian Masyarakat"
                    android:textAlignment="center"
                    android:textColor="@color/Primary"
                    android:textSize="15sp" />
            </RelativeLayout>

        </GridLayout>

    </LinearLayout>

</LinearLayout>